        <tr><td>HEADER</td><td>null</td></tr>
        <tr><td>Usuario</td><td>administrador </td></tr>
        <tr><td>petición json</td><td>{"codigo": 3,"nombre": "cafe","fk_tipo_analisis": 2}</td></tr>
